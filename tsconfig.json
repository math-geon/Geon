{
    "allowSyntheticDefaultImports": true,
    "compilerOptions": {
        "lib": ["ES6", "DOM", "ES2015", "ES2017", "DOM.ITERABLE", "ESNEXT"],
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "composite": true,
        "target": "ES6",
        "outDir": "build",
        "types": ["node", "chalk"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": ["node_modules", "build", "tsconfig.json", "frontend"]
}
